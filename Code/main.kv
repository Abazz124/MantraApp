#:import utils kivy.utils
<MainScreen>
    FloatLayout:
        #canvas:
            #Color:
             #   rgb: utils.get_color_from_hex("#ffbb99")
         #   Rectangle:
          #      pos: self.pos
           #     size: self.size

        GridLayout:
            cols: 2
            pos_hint: {"x":0.6, "top":1}
            size_hint: 0.4,0.2
            spacing_horizontal: [0.9*root.width]
            Label:
                text: "Name"
            ImageButton:
                id: profile_icon
                source: "profile_icon"
                on_release: root.icon_popup()

        Label:
            text: mantra_text.text
            pos_hint: {"x":0, "top":0.8}
            size_hint: 1, 0.2
            text_size: self.size
            halign: "center"
            font_size: 25
        MDTextFieldRound:
            id: mantra_text
            pos_hint: {"x": 0.15, "top":0.6}
            size_hint: 0.7, 0.1
            #foreground_color: 1, 0, 1, 1
            #text_size: self.size

        #Time
        LabelButton:
            text: str(app.hour) + ":" + str(app.minute) if app.hour >= 10 and app.minute >= 10 else str(0) + str(app.hour) + ":" + str(0) + str(app.minute) if app.hour < 10 and app.minute < 10 else str(0) + str(app.hour) + ":" + str(app.minute) if app.hour < 10 and app.minute >= 10 else str(app.hour) + ":" + str(0) + str(app.minute) if app.hour >= 10 and app.minute < 10 else "There is an error"
            pos_hint: {"x":0.4, "top":0.5}
            size_hint: 0.2, 0.1
            font_size: 20
            color: [0,0,0,1]
            on_release: app.show_timepicker()


    #Popup_Content:
     #   id: popup_content
<Popup_Content>
    GridLayout:
        cols: 5
        ImageButton:
            id: man_01
            source: "icons/male_icon_01.png"
            on_release: app.set_profile_icon(man_01)
        ImageButton:
            id: man_02
            source: "icons/male_icon_02.png"
            on_release: app.set_profile_icon(man_02)
        ImageButton:
            source: "icons/male_icon_01.png"
            on_release: app.set_profile_icon()
        ImageButton:
            source: "icons/male_icon_01.png"
            on_release: app.set_profile_icon()
        ImageButton:
            source: "icons/male_icon_01.png"
            on_release: app.set_profile_icon()
        ImageButton:
            id: female_01
            source: "icons/female_icon_01.png"
            on_release: app.set_profile_icon(female_01)

<Mantra_Message_Popup>
    FloatLayout:
        Label:
            text: app.root.ids.mantra_text.text
            font_size: 30


